<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="Éditeur de texte" Height="200" Width="375">
    <StackPanel>
        <TextBox TextChanged="TxtText_TextChange" Name="txtText" Width="300" Height="25" Margin="5" Background="Azure" ></TextBox>
        <WrapPanel>
            <Button Click="BtnGras_Click" Name="btnGras" FontWeight="Bold" Margin="10" Height="25" Width="25">G</Button>
            <Button Click="BtnItalique_Click" Name="btnItalique" FontStyle="Italic" Height="25" Width="25">I</Button>
            <Button Click="BtnEffacerClick" Name="btnEffaceArriere" Margin="10" Width="50" Height="25" >  </Button>
            <Button Click="BtnVider_Click" Name="btnVider" Width="50" Height="25"> Vider </Button>
        </WrapPanel>
    </StackPanel>

</Window>
