<Application x:Class="Ex1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:sys="clr-namespace:System;assembly=mscorlib"
             
             xmlns:local="clr-namespace:Ex1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="WindowBackgroundBrush">
            <GradientStop Offset="0" Color="LightGreen"></GradientStop>
            <GradientStop Offset="0.5" Color="LightBlue"></GradientStop>
            <GradientStop Offset="1" Color="LightGray"></GradientStop>
        </LinearGradientBrush>
        <sys:String x:Key="strApp1">Refuser d'obeir</sys:String>
        <sys:String x:Key="strApp2">Refuser de le faire</sys:String>
        <sys:String x:Key="strApp3">N'allez pas à la guerre</sys:String>
    </Application.Resources>
</Application>
